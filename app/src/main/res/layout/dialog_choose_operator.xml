<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/constraint_default_margin_4dp"
            android:paddingEnd="@dimen/constraint_default_margin_4dp"
            android:paddingTop="@dimen/constraint_default_margin_4dp"
            android:paddingBottom="@dimen/constraint_default_margin_4dp"
            android:orientation="vertical">


        <Button
                android:id="@+id/btn_scan"
                android:layout_width="0dp"
                android:background="@drawable/btn_bg_accent"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/constraint_default_margin_8dp"
                android:layout_height="wrap_content"
                android:text="@string/scan_operator_badge"
                android:textAllCaps="false"
                app:drawableTopCompat="@drawable/ic_qr_scanner_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/or"
                android:drawablePadding="@dimen/constraint_default_margin_4dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/constraint_default_margin_8dp"
                android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
                android:layout_marginTop="@dimen/constraint_default_margin_8dp"
                android:layout_marginBottom="@dimen/constraint_default_margin_8dp"
                />


        <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/constraint_default_margin_8dp"
                android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
                android:layout_marginTop="@dimen/constraint_default_margin_8dp"
                android:layout_marginBottom="@dimen/constraint_default_margin_8dp"
                app:layout_constraintStart_toEndOf="@id/btn_scan"
                app:layout_constraintEnd_toStartOf="@id/btn_enter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        <Button
                android:id="@+id/btn_enter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_accent"
                android:text="@string/enter_operator_name"
                android:layout_marginStart="@dimen/constraint_default_margin_8dp"
                android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
                android:layout_marginTop="@dimen/constraint_default_margin_8dp"
                android:layout_marginBottom="@dimen/constraint_default_margin_8dp"
                android:textAllCaps="false"
                android:padding="@dimen/constraint_default_margin_8dp"
                android:textColor="@color/colorWhite"
                android:drawablePadding="@dimen/constraint_default_margin_4dp"
                app:drawableTopCompat="@drawable/ic_hand_with_pen"
                app:layout_constraintStart_toEndOf="@id/or"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
