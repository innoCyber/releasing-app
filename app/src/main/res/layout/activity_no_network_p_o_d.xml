        <Button
            android:id="@+id/btn_next"
            style="@style/ButtonStyle.Save"
            android:layout_margin="20dp"
            android:onClick="goTOSearchActivity"
            android:layout_alignParentBottom="true"
            android:text="@string/confirm" />




</RelativeLayout>