<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/container_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="22sp"
            style="@style/CargoNumber"
            android:text="@string/cargo_number"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/container_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            style="@style/CargoNumber"
            android:layout_below="@id/container_number_text"
            />

        <Spinner
            android:id="@+id/pod_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SpinnerStyle"
            android:entries="@array/sample"
            android:layout_marginStart="@dimen/constraint_default_margin_10dp"
            android:layout_marginEnd="@dimen/constraint_default_margin_10dp"
            android:layout_centerInParent="true"
           />

        <Button
            android:id="@+id/btn_next"
            style="@style/ButtonStyle.Save"
            android:layout_margin="20dp"
            android:onClick="goTOSearchActivity"
            android:layout_alignParentBottom="true"
            android:text="@string/confirm" />



</RelativeLayout>