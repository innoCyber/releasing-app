<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />


        <ptml.releasing.app.views.MaterialRippleLayout
            android:id="@+id/btn_configuration_layout"
            style="@style/RippleLayoutStyle.HomeTop"
            android:layout_marginStart="@dimen/constraint_default_margin_8dp"
            android:layout_marginTop="@dimen/constraint_default_margin_8dp"
            android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
            app:layout_constraintEnd_toStartOf="@id/btn_search_layout"
            app:layout_constraintStart_toStartOf="@id/guideline_l"
            app:layout_constraintTop_toTopOf="parent">

            <ptml.releasing.app.views.ReleasingHomeButton
                android:id="@+id/btn_configuration"
                style="@style/ReleasingHomeButtonStyle.Bottom"
                app:rb_icon="@drawable/btn_configuration_bg"
                app:rb_text="@string/configuration" />
        </ptml.releasing.app.views.MaterialRippleLayout>


        <ptml.releasing.app.views.MaterialRippleLayout
            android:id="@+id/btn_search_layout"
            style="@style/RippleLayoutStyle.HomeTop"

            android:layout_marginStart="@dimen/constraint_default_margin_8dp"
            android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
            app:layout_constraintBottom_toBottomOf="@id/btn_configuration_layout"
            app:layout_constraintEnd_toEndOf="@id/guideline_r"

            app:layout_constraintStart_toEndOf="@id/btn_configuration_layout"
            app:layout_constraintTop_toTopOf="@id/btn_configuration_layout">

            <ptml.releasing.app.views.ReleasingHomeButton
                android:id="@+id/btn_search"
                style="@style/ReleasingHomeButtonStyle.Bottom"
                app:rb_icon="@drawable/btn_search_bg"
                app:rb_text="@string/cargo_search" />
        </ptml.releasing.app.views.MaterialRippleLayout>


        <ptml.releasing.app.views.MaterialRippleLayout
            android:id="@+id/btn_download_layout"
            style="@style/RippleLayoutStyle.HomeTop"
            android:layout_marginTop="@dimen/constraint_default_margin_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btn_configuration_layout"
            app:layout_constraintStart_toStartOf="@id/btn_configuration_layout"
            app:layout_constraintTop_toBottomOf="@id/btn_configuration_layout">

            <ptml.releasing.app.views.ReleasingHomeButton
                android:id="@+id/btn_download"
                style="@style/ReleasingHomeButtonStyle.Bottom"
                app:rb_icon="@drawable/btn_download_bg"
                app:rb_text="@string/download_damages" />
        </ptml.releasing.app.views.MaterialRippleLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
