<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/constraint_default_margin_4dp">

            <TextView
                android:id="@+id/error_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/constraint_default_margin_8dp"
                android:layout_marginTop="@dimen/constraint_default_margin_4dp"
                android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
                android:layout_marginBottom="@dimen/constraint_default_margin_8dp"
                android:maxLines="10"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/constraint_default_margin_8dp"
                android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
                android:layout_marginTop="@dimen/constraint_default_margin_4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="?colorOnSurface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/error_text_view"
                tools:text="@tools:sample/date/ddmmyy" />

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/constraint_default_margin_8dp"
                android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
                android:layout_marginTop="@dimen/constraint_default_margin_4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="?colorOnSurface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_text_view"
                tools:text="Get the admin configuration for operation step, terminal and cargo type" />

            <TextView
                android:id="@+id/url_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/constraint_default_margin_8dp"
                android:layout_marginEnd="@dimen/constraint_default_margin_8dp"
                android:layout_marginTop="@dimen/constraint_default_margin_4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="?colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_text_view"
                tools:text="https://billing.grimaldi-nigeria.com:1448/api/AndroidZebra/setConfigurationDevice?&amp;operation_step=32&amp;IMEI=861327032935756" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>