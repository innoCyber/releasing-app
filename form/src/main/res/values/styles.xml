    <dimen name="home_btn_text_size">18sp</dimen>


    <style name="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/constraint_default_margin_24dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="LabelStyle.FindCargo">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/search_label_text_size</item>
    </style>

    <style name="CargoNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/constraint_default_margin_16dp</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
</resources>